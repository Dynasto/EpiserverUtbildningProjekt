@using AlloyTraining.Models.ViewModels
@using AlloyTraining.Models.Pages
@using AlloyTraining
@using EPiServer.Editor

@model IPageViewModel<ProductPage>
@{
    Layout = "~/Views/Shared/Layouts/_RightRelatedContent.cshtml";
}
<h1 @Html.EditAttributes(x => x.CurrentPage.Name)>@Model.CurrentPage.Name</h1>
<p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescriptionMojs)>@Model.CurrentPage.MetaDescriptionMojs</p>
<div class="row">
    <div class="span8 clearfix">
        @Html.PropertyFor(x => x.CurrentPage.MainBody)
    </div>
</div>

@Html.PropertyFor(x => x.CurrentPage.MainContentAreaProduct, new { CssClass = "", Tag = SiteTagsHejsan.Wide })

@section RelatedContent
{
    <div @Html.EditAttributes(x => x.CurrentPage.PageImageBild)>
        <img src="@Url.ContentUrl(Model.CurrentPage.PageImageBild)" />
    </div>
    <div class="block colorBox @Model.CurrentPage.Theme">
        <h2 @Html.EditAttributes(x => x.CurrentPage.Name)>
            @Model.CurrentPage.Name
        </h2>
        <p @Html.EditAttributes(x => x.CurrentPage.UniqueSellingPointsDinMamma)>
            @foreach (string usp in Model.CurrentPage.UniqueSellingPointsDinMamma)
            {
                <span class="label label-inverse">@usp</span>
            }
        </p>
    </div>

    @Html.PropertyFor(x => x.CurrentPage.RelatedMainContentAreaProduct, new { CssClass = "", Tag = SiteTagsHejsan.Narrow })
}